{
    "rules": {
        "freewrite_sessions": {
            "$sessionId": {
                ".read": "auth != null",
                ".write": "auth != null"
            }
        },
        "kindlechat": {
            "messages": {
                ".read": true,
                ".write": false,
                ".indexOn": [
                    "timestamp"
                ],
                "$messageId": {
                    ".write": "auth.token.email === 'ukiyo@rekindle.ink' || (auth != null && !data.exists())",
                    ".validate": "newData.hasChildren(['user', 'text', 'timestamp'])",
                    "reactions": {
                        "$uid": {
                            ".write": "auth.uid === $uid || auth.token.email === 'ukiyo@rekindle.ink'",
                            ".validate": "newData.hasChildren(['reaction', 'username'])"
                        }
                    }
                }
            }
        }
    }
}