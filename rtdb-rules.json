{
    "rules": {
        "freewrite_sessions": {
            "$sessionId": {
                ".read": "auth != null",
                ".write": "auth != null"
            }
        },
        "pro_gate": {
            ".read": "auth != null",
            ".write": "auth.token.email === 'ukiyo@rekindle.ink'"
        },
        "kindlechat": {
            "messages": {
                ".read": true,
                ".write": "auth.token.email === 'ukiyo@rekindle.ink'",
                ".indexOn": [
                    "timestamp",
                    "user"
                ],
                "$messageId": {
                    ".write": "auth != null && !data.exists() || auth.token.email === 'ukiyo@rekindle.ink'",
                    ".validate": "newData.hasChildren(['user', 'text', 'timestamp']) || auth.token.email === 'ukiyo@rekindle.ink'",
                    "reactions": {
                        "$uid": {
                            ".write": "auth.uid === $uid",
                            ".validate": "newData.hasChildren(['reaction', 'username'])"
                        }
                    }
                }
            }
        }
    }
}