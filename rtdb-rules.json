{
    "rules": {
        "freewrite_sessions": {
            "$sessionId": {
                ".read": "auth != null",
                ".write": "auth != null"
            }
        },
        "kindlechat": {
            "messages": {
                ".read": true,
                ".write": "auth != null",
                ".indexOn": [
                    "timestamp"
                ],
                "$messageId": {
                    ".validate": "newData.hasChildren(['user', 'text', 'timestamp'])",
                    "reactions": {
                        "$uid": {
                            ".write": "auth.uid === $uid",
                            ".validate": "newData.isString() && newData.val().length < 50"
                        }
                    }
                }
            }
        }
    }
}